<form @onsubmit="@HandleSubmit" class="searchBarForm">
    <div class="searchBar">
        <span class="searchBar__icon icon-search" />
        <input class="searchBar__input" @bind="searchValue" type="text" placeholder="Tìm kiếm tại đây..." />
    </div>
</form>

@code {
    [Parameter]
    public EventCallback<string> OnSearch { get; set; }

    private string? searchValue;

    private Task HandleSubmit() => OnSearch.InvokeAsync(searchValue);
}